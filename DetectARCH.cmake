# For now it's only supposing that we are building for the minimum arch version of the host machine.

IF(${CMAKE_SYSTEM_PROCESSOR} MATCHES "armv7-a")
    SET(SILEXARS_TARGET_ARCH "arm")
ELSEIF(${CMAKE_SYSTEM_PROCESSOR} MATCHES "i686")
    SET(SILEXARS_TARGET_ARCH "x86")
ELSEIF(${CMAKE_SYSTEM_PROCESSOR} MATCHES "AMD64")
    SET(SILEXARS_TARGET_ARCH "x86")
ELSE()
    SET(SILEXARS_TARGET_ARCH ${CMAKE_SYSTEM_PROCESSOR})
ENDIF()

IF(${SILEXARS_TARGET_ARCH} MATCHES "x86")
    SET(X86 ${SILEXARS_TARGET_ARCH})
ELSEIF(${SILEXARS_TARGET_ARCH} MATCHES "x86_64")
    SET(X86_64 ${SILEXARS_TARGET_ARCH})
ELSEIF(${SILEXARS_TARGET_ARCH} MATCHES "arm")
    SET(ARM ${SILEXARS_TARGET_ARCH})
ELSEIF(${SILEXARS_TARGET_ARCH} MATCHES "mips")
    SET(MIPS ${SILEXARS_TARGET_ARCH})
ENDIF()
