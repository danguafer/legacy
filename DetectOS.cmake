IF(${CMAKE_HOST_SYSTEM_NAME} MATCHES "Linux")
    SET(SILEXARS_HOST_SYSTEM "linux")
ELSEIF(${CMAKE_HOST_SYSTEM_NAME} MATCHES "Darwin")
    SET(SILEXARS_HOST_SYSTEM "osx")
ELSEIF(${CMAKE_HOST_SYSTEM_NAME} MATCHES "Windows")
    SET(SILEXARS_HOST_SYSTEM "windows")
ELSE()
    SET(SILEXARS_HOST_SYSTEM "unknown")
ENDIF()

IF(ANDROID)
    SET(SILEXARS_TARGET_SYSTEM "android")
    ADD_DEFINITIONS(-DANDROID_NATIVE_API_LEVEL=${ANDROID_NATIVE_API_LEVEL})
ELSE()
    SET(SILEXARS_TARGET_SYSTEM ${SILEXARS_HOST_SYSTEM})
ENDIF()

IF(${SILEXARS_TARGET_SYSTEM} MATCHES "windows")
    SET(WINDOWS ${SILEXARS_TARGET_SYSTEM})
    SET(DESKTOP ${SILEXARS_TARGET_SYSTEM})
ELSEIF(${SILEXARS_TARGET_SYSTEM} MATCHES "linux")
    SET(LINUX ${SILEXARS_TARGET_SYSTEM})
    SET(DESKTOP ${SILEXARS_TARGET_SYSTEM})
ELSEIF(${SILEXARS_TARGET_SYSTEM} MATCHES "osx")
    SET(OSX ${SILEXARS_TARGET_SYSTEM})
    SET(DESKTOP ${SILEXARS_TARGET_SYSTEM})
ELSEIF(${SILEXARS_TARGET_SYSTEM} MATCHES "android")
    SET(ANDROID ${SILEXARS_TARGET_SYSTEM})
    SET(MOBILE ${SILEXARS_TARGET_SYSTEM})
ELSEIF(${SILEXARS_TARGET_SYSTEM} MATCHES "ios")
    SET(IOS ${SILEXARS_TARGET_SYSTEM})
    SET(MOBILE ${SILEXARS_TARGET_SYSTEM})
ENDIF()
